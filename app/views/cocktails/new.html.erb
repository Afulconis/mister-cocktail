<h1 class="text-center">Create a new Cocktail</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name, placeholder: "Vlateez" %>
        <%= f.submit "Go", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


